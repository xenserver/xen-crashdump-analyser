Name: xen-crashdump-analyser
Summary: Xen crashdump analyser
Version: @XCA_VERSION@
Release: @XCA_RELEASE@
License: GPL
Group: Applications/System
Source: %{name}-%{version}.tar.gz
BuildRequires: gcc-c++

%description

%prep
%setup -q -n %{name}

%build
%{?cov_wrap} %{__make} VERSION=\"%{version}\"

%install
%{__rm} -rf %{buildroot}
%{__install} -D -m755 xen-crashdump-analyser %{buildroot}%{_libdir}/xen/bin/xen-crashdump-analyser

%clean
%{__rm} -rf %{buildroot}

%post

%files
%defattr(-,root,root,-)
%{_libdir}/xen/bin/xen-crashdump-analyser

%changelog
